{
    "name": "budget-bee-server",
    "version": "1.0.0",
    "description": "",
    "main": "server.ts",
    "type": "module",
    "scripts": {
        "dev": "tsx --watch --env-file .env.development src/server.ts",
        "dev:staging": "tsx --watch --env-file .env.staging src/server.ts",
        "dev:prod": "tsx --watch --env-file .env.production src/server.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "nodemon dist/server.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint",
            "prettier --check"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --check"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.28.2",
    "dependencies": {
        "@types/cors": "^2.8.19",
        "@types/winston": "^2.4.4",
        "colorette": "^2.0.20",
        "cors": "^2.8.6",
        "dotenv-flow": "^4.1.0",
        "express": "^5.2.1",
        "logform": "^2.7.0",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.4.1",
        "@commitlint/config-conventional": "^20.4.1",
        "@eslint/js": "^9.39.2",
        "@tsconfig/node22": "^22.0.5",
        "@tsconfig/node24": "^24.0.4",
        "@types/express": "^5.0.6",
        "@types/node": "^25.2.1",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/eslint-plugin": "^1.6.6",
        "eslint": "^9.39.2",
        "eslint-plugin-perfectionist": "^5.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0",
        "vitest": "^4.0.18"
    },
    "imports": {
        "#*": "./src/*"
    },
    "volta": {
        "node": "24.13.0"
    }
}
